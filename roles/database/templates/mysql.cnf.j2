# MySQL Configuration - Managed by Ansible
[mysqld]
bind-address = {{ mysql_bind_address }}
port = {{ mysql_port }}

# Server ID (for replication)
server-id = {{ mysql_server_id | default(1) }}

# Connection settings
max_connections = {{ mysql_max_connections | default(100) }}
max_connect_errors = 100000

# Buffer settings
innodb_buffer_pool_size = {{ mysql_innodb_buffer_pool_size | default('128M') }}
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Logging
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Security
local_infile = 0 