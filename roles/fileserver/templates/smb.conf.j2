# Samba Configuration - Managed by Ansible
[global]
workgroup = WORKGROUP
server string = {{ ansible_hostname }} File Server
security = user
map to guest = bad user
dns proxy = no

# Logging
log file = /var/log/samba/log.%m
max log size = 1000
syslog = 0

# Performance
socket options = TCP_NODELAY IPTOS_LOWDELAY SO_RCVBUF=131072 SO_SNDBUF=131072
read raw = yes
write raw = yes
max xmit = 65535
dead time = 15
getwd cache = yes

[shared]
comment = Shared Directory on {{ ansible_hostname }}
path = /srv/shared
browseable = yes
guest ok = yes
read only = no
create mask = 0755
directory mask = 0755 